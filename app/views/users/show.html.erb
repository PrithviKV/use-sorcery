<p>
  <b>Email:</b>
  <%= @user.email %>
</p>
<%= link_to 'My posts', user_posts_path(@user) %>

<%= form_for([@user, @user.posts.build]) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


